{
    "rules": {
        "no-console": 0,
        "no-dupe-keys": 2,
        "no-unused-vars": [ 2 , { "vars" : "all", "args" : "none" } ],
        "indent": [2, "tab"],
        "semi": [1, "always"],
        "quotes": [0, "single"],
        "comma-dangle": [1, "always-multiline"],
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/jsx-no-duplicate-props": 2,
        "key-spacing": [ "error" , { "beforeColon" : true, "afterColon" : true } ],
        "object-curly-spacing" : ["error", "always"],
        "space-before-function-paren" : 2
    },
    "globals": {
        "global" : true,
        "dataLayer": true,
        "FB": true,
        "_": true,
        "$": true,
        "ga": true,
        "trackJs": true,
        "XLSX": true,
        "_store": true,
        "_history": true,
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "blockBindings": true,
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true,
        },
    },
    "plugins": [
        "react"
    ],
}
